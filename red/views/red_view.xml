<?xml version="1.0" encoding="UTF-8"?> 
<odoo> 
<!-- Comentario en la Views --> 
     <record id="view_ej_red_form" model="ir.ui.view"> 
        <field name="name">ej.red.form</field> 
        <field name="model">ej.red</field> 
        <field name="arch" type="xml"> 
            <form string="Listado de Red"> 
                <group> 
                    <field name="nombre"/> 
                </group> 
            </form> 
        </field> 
    </record> 
     <record id="view_ej_red_tree" model="ir.ui.view"> 
        <field name="name">ej.red.tree</field> 
        <field name="model">ej.red</field> 
        <field name="arch" type="xml"> 
           <tree> 
                    <field name="nombre"/> 
           </tree> 
        </field> 
    </record> 
    <record model="ir.actions.act_window" id="act_ej_red"> 
        <field name="name">red</field> 
        <field name="res_model">ej.red</field> 
        <field name="view_mode">tree,form</field> 
        <field name="view_id"  ref="view_tree_nombre" /> 
    </record> 
<!--  Declaramos los menu --> 
<menuitem id="ej_red_menu" name="Red" sequence="10"/> 
<menuitem id="submenu_ej_red_menu" name="Red" sequence="10" parent="ej_red_menu"/> 
<menuitem id="submenu_ej_red_action" name="Red" sequence="10" parent="submenu_ej_red_menu" action="act_ej_red"/> 
</odoo> 
